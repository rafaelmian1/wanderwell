{
    "name": "wanderwell",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier . --write",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "cypress:open": "cypress open",
        "e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
        "e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
        "component": "cypress open --component",
        "component:headless": "cypress run --component",
        "compose:up:mongo": "docker compose -f ./docker-compose.yml -f ./docker-compose.mongo.yml up --build -d",
        "compose:down:mongo": "docker compose -f ./docker-compose.yml -f ./docker-compose.mongo.yml down",
        "compose:up:pg": "docker compose -f ./docker-compose.yml -f ./docker-compose.postgres.yml up --build -d && docker exec ww-app pnpm db:pg:migrate",
        "compose:down:pg": "docker compose -f ./docker-compose.yml -f ./docker-compose.postgres.yml down",
        "db:pg:dump": "docker exec -it ww-postgres pg_restore -U postgres -d postgres /dump/wanderwell",
        "db:mongo:dump": "docker exec -it ww-mongo mongorestore -d wanderwell /dump/wanderwell",
        "db:pg:generate:migration": "drizzle-kit generate",
        "db:pg:migrate": "drizzle-kit migrate"
    },
    "dependencies": {
        "drizzle-orm": "^0.33.0",
        "mongoose": "^8.5.0",
        "next": "14.2.4",
        "pg": "^8.13.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.1.0",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^16.0.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^20.14.10",
        "@types/pg": "^8.11.10",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.16.0",
        "@vitejs/plugin-react": "^4.3.1",
        "@vitest/coverage-istanbul": "^1.6.0",
        "autoprefixer": "^10.4.19",
        "cross-env": "^7.0.3",
        "cypress": "^13.13.0",
        "drizzle-kit": "^0.24.2",
        "eslint": "^8.57.0",
        "eslint-config-next": "13.5.6",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "jiti": "^1.21.6",
        "jsdom": "^24.1.0",
        "postcss": "^8.4.39",
        "prettier": "^3.3.3",
        "tailwindcss": "^3.4.4",
        "typescript": "^5.5.3",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^1.6.0"
    }
}
